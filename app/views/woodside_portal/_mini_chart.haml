- total = n.sum.to_f
.progress
  .progress-bar.progress-bar-success{:role => "progressbar", :style => "width: #{n[0] * 100 / total}%;"}
    = n[0]
  .progress-bar.progress-bar-warning{:role => "progressbar", :style => "width: #{n[1] * 100 / total}%;"}
    = n[1]
  .progress-bar.progress-bar-danger{:role => "progressbar", :style => "width: #{n[2] * 100 / total}%;"}
    = n[2]
  .progress-bar.progress-bar-unknown{:role => "progressbar", :style => "width: #{n[3] * 100 / total}%;"}
    = n[3]
